<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-weather_condition-table-1.0" author="Vladislav">
        <preConditions onFail="MARK_RAN" onError="WARN">
            <not>
                <tableExists tableName="weather_condition"/>
            </not>
        </preConditions>

        <createTable tableName="weather_condition">
            <column name="id" type="INT" autoIncrement="true" remarks="Id of weather condition">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(200)" remarks="Name of weather condition">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="addWeatherConditions" author="Vladislav">
        <preConditions onFail="MARK_RAN" onError="WARN">
            <tableExists tableName="weather_condition"/>
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM weather_condition</sqlCheck>
        </preConditions>

        <insert tableName="weather_condition">
            <column name="name" value="Rain"/>
        </insert>
        <insert tableName="weather_condition">
            <column name="name" value="Sunny"/>
        </insert>
        <insert tableName="weather_condition">
            <column name="name" value="Cloudy"/>
        </insert>
        <insert tableName="weather_condition">
            <column name="name" value="Snow"/>
        </insert>
        <insert tableName="weather_condition">
            <column name="name" value="Windy"/>
        </insert>
    </changeSet>

</databaseChangeLog>