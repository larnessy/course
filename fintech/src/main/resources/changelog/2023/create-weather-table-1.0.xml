<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-weather-table-1.0" author="Vladislav">

        <preConditions onFail="MARK_RAN" onError="WARN">
            <not>
                <tableExists tableName="weather"/>
            </not>
        </preConditions>

        <createTable tableName="weather">
            <column name="id" type="INT"  autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="city_id" type="INT">
                <constraints nullable="false" />
            </column>

            <column name="weather_condition_id" type="INT">
                <constraints nullable="false" />
            </column>

            <column name="temperature" type="DOUBLE">
                <constraints nullable="false" />
            </column>

            <column name="date_time" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="weather" baseColumnNames="city_id"
                                 constraintName="FK_weather_city"
                                 referencedTableName="city" referencedColumnNames="id" />
        <addForeignKeyConstraint baseTableName="weather" baseColumnNames="weather_condition_id"
                                 constraintName="FK_weather_weather_condition"
                                 referencedTableName="weather_condition" referencedColumnNames="id" />

        <createIndex tableName="weather" indexName="idx_weather_temperature_date_time">
            <column name="temperature"/>
            <column name="date_time"/>
        </createIndex>
    </changeSet>

    <changeSet id="addWeathers" author="Vladislav">
        <preConditions onFail="MARK_RAN" onError="WARN">
            <tableExists tableName="weather"/>
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM weather</sqlCheck>
        </preConditions>

        <insert tableName="weather">
            <column name="city_id" valueNumeric="2"/>
            <column name="weather_condition_id" valueNumeric="3"/>
            <column name="temperature" valueNumeric="1"/>
            <column name="date_time" value="2000-01-01 00:00:00"/>
        </insert>
        <insert tableName="weather">
            <column name="city_id" valueNumeric="2"/>
            <column name="weather_condition_id" valueNumeric="2"/>
            <column name="temperature" valueNumeric="2"/>
            <column name="date_time" value="2000-02-02 00:00:00"/>
        </insert>
        <insert tableName="weather">
            <column name="city_id" valueNumeric="3"/>
            <column name="weather_condition_id" valueNumeric="3"/>
            <column name="temperature" valueNumeric="3"/>
            <column name="date_time" value="2000-03-03 00:00:00"/>
        </insert>
        <insert tableName="weather">
            <column name="city_id" valueNumeric="4"/>
            <column name="weather_condition_id" valueNumeric="4"/>
            <column name="temperature" valueNumeric="4"/>
            <column name="date_time" value="2000-04-04 00:00:00"/>
        </insert>
        <insert tableName="weather">
            <column name="city_id" valueNumeric="5"/>
            <column name="weather_condition_id" valueNumeric="5"/>
            <column name="temperature" valueNumeric="5"/>
            <column name="date_time" value="2000-05-05 00:00:00"/>
        </insert>
    </changeSet>

</databaseChangeLog>